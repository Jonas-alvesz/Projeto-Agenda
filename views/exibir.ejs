<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exibir Compromissos</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <nav>
        <div id="container-nav">
            <div class="itens">
                <span class="material-symbols-outlined">
                    calendar_month
                </span>
            </div>

            <div class="itens" onclick="expandirMenu()">
                <span class="material-symbols-outlined" style="margin-left: auto; border-radius: 5px; border: 1px solid;">
                    menu
                </span>
            </div>
        </div>
    </nav>

    <div id="container-op">
        <div class="itens-op" onclick="window.location.href='/'">Cadastrar</div>
        <div class="itens-op">Consultar</div>
    </div>

    <div id="container">
        <h1>Cadastrar Compromisso</h1>

        <form action="/filtrar" method="POST">
            <div id="container-form">
                <input type="text" placeholder="Digite aqui seu compromisso" name="compromisso" id="compromisso" class="itens-form" style="flex: 20;">
                <input type="number" placeholder="Dia" name="dia" id="dia" class="itens-form" min="1" max="31">
                <select name="mes" id="mes" class="itens-form">
                    <option value="">Mês</option>
                    <option value="1">Janeiro</option>
                    <option value="2">Fevereiro</option>
                    <option value="3">Março</option>
                    <option value="4">Abril</option>
                    <option value="5">Maio</option>
                    <option value="6">Junho</option>
                    <option value="7">Julho</option>
                    <option value="8">Agosto</option>
                    <option value="9">Setembro</option>
                    <option value="10">Outubro</option>
                    <option value="11">Novembro</option>
                    <option value="12">Dezembro</option>
                </select>
                <select name="ano" id="ano" class="itens-form">
                    <option value="">Ano</option>
                    <option value="2024">2024</option>
                </select>
            </div>
            <div id="botao">
                <button type="submit">+</button>
            </div>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Compromisso</th>
                    <th>Data</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <% dados.forEach(element => { %>
                    <tr>
                        <td><%= element.compromisso %></td>
                        <td><%= element.dia %>/<%= element.mes %>/<%= element.ano %></td>
                        <td>
                            <form action="/delete" method="post">
                                <input type="hidden" name="compromisso" value="<%= element.compromisso %>">
                                <button type="submit">x</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="/js/script.js"></script>
</body>

</html>
